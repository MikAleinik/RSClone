{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "noImplicitAny": true,
        "module": "es6",
        "target": "ES2020",
        "allowJs": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "sourceMap": true,
        "moduleResolution": "node"        
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ],
    "files": [
        "src/index.ts",
        "src/main.ts",
        "src/about.ts"
    ]
}